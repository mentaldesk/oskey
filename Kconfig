DT_COMPAT_ZMK_BEHAVIOR_OS_SELECTOR := zmk,behavior-os-selector
DT_COMPAT_ZMK_BEHAVIOR_OS_KEY := zmk,behavior-os-key

config ZMK_BEHAVIOR_OS_SELECTOR
    bool
    default $(dt_compat_enabled,$(DT_COMPAT_ZMK_BEHAVIOR_OS_SELECTOR))

config ZMK_BEHAVIOR_OS_KEY
    bool
    default $(dt_compat_enabled,$(DT_COMPAT_ZMK_BEHAVIOR_OS_KEY))

config ZMK_OSKEY_STATE
    bool
    default y if ZMK_BEHAVIOR_OS_SELECTOR || ZMK_BEHAVIOR_OS_KEY
